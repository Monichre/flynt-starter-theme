{
  "layout": {
    "name": "mediaSlider",
    "label": "Media Slider",
    "sub_fields": [
      {
        "label": "Media Slides",
        "name": "mediaSlides",
        "type": "repeater",
        "layout": "row",
        "button_label": "Add Slide",
        "sub_fields": [
          {
            "label": "Media Type",
            "name": "mediaType",
            "type": "select",
            "choices": {
              "image": "Image",
              "oembed": "Video"
            },
            "default_value": ""
          },
          {
            "label": "Image",
            "name": "image",
            "type": "image",
            "preview_size": "medium",
            "mime_types": "jpg,jpeg",
            "instructions": "Recommended Size: Min-Width 1200px; Min-Height: 675px; Image-Format: JPG, Aspect Ratio 16/9.",
            "required": 1
          },
          {
            "label": "Oembed",
            "name": "oembed",
            "type": "oembed",
            "width": 100,
            "height": 100,
            "required": 1,
            "conditional_logic": [
              [
                {
                  "fieldPath": "mediaType",
                  "operator": "==",
                  "value": "oembed"
                }
              ]
            ]
          },
          {
            "name": "titleText",
            "label": "Title Text",
            "type": "text",
            "maxlength": 0
          }
        ]
      }
    ]
  }
}

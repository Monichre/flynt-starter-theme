@font-face
  font-family: 'slick'
  font-weight: normal
  font-style: normal
  src: url('../../vendor/slick/slick.eot')
  src: url('../../vendor/slick/slick.eot?#iefix') format('embedded-opentype'), url('../../vendor/slick/slick.woff') format('woff'), url('../../vendor/slick/slick.ttf') format('truetype'), url('../../vendor/slick/slick.svg#slick') format('svg')

$colorGray = lookup('$global-color-gray') || #333
$colorWhite = lookup('$global-color-white') || #fff
$slideDotsOffset = 15px
$slideDotsSpacing = 2px
$slideDotsSize = 12px
$arrowSize = 30px

&-prevButton,
&-nextButton
  background: transparent
  border: 0
  color: $colorWhite
  cursor: pointer
  font-family: 'slick'
  font-size: $arrowSize
  margin: auto
  opacity: 1
  outline: 0
  padding: 0
  position: absolute
  top: 50%
  transform: translateY(-100%)
  transition: all .25s
  visibility: visible
  z-index: 2

  &.slick-disabled
    opacity: 0
    visibility: hidden

&-prevButton
  left: 15px

&-nextButton
  right: 15px

.slick-dots
  list-style: none
  margin: 0
  padding: 0
  text-align: center
  width: 100%
  position: absolute
  left: 0
  bottom: $slideDotsOffset

.slick-dots > li
  display: inline-block
  margin: 0 $slideDotsSpacing

.slick-dots > li button
  background: transparent
  border-radius: 50%
  border: 2px solid $colorWhite
  color: transparent
  cursor: pointer
  display: block
  height: $slideDotsSize
  outline: 0
  padding: 0
  width: $slideDotsSize

.slick-dots > li.slick-active button
  background: $colorWhite

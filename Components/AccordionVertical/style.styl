$rupture.scale = lookup('$globalRuptureScale') || (0 575px 767px 991px 1199px)
$rupture.anti-overlap = lookup('$globalRuptureAntiOverlap') || -1px
$containerPadding = lookup('$globalContainerPadding') || 15px
$containerMaxWidth = lookup('$globalContainerMaxWidth') || 1140px
$colorBrand = lookup('$globalColorBrand') || #254fc7
$itemPadding = 15px
$iconHeight = 11px
$iconWidth = 13px

.flyntComponent[is='flynt-accordion-vertical']
  *,
  *:before,
  *:after
    box-sizing: border-box

  .accordionVertical
    center($containerMaxWidth, $containerPadding)

    &-list
      list-style: none
      margin: 0
      padding: 0

    &-content
      display: none
      padding: 0 $itemPadding

    &-btn
      -webkit-appearance: none
      background: transparent
      border: 0
      border-bottom: 1px solid #eaeaea
      border-radius: 0
      cursor: pointer
      display: block
      font-size: 16px
      outline: 0
      padding: $itemPadding ($itemPadding + $iconWidth) $itemPadding $itemPadding
      position: relative
      text-align: left
      transition: color .3s ease
      width: 100%

      &:hover
        color: $colorBrand

    &-icon
      display: block
      float: right
      height: $iconHeight
      position: absolute
      right: $itemPadding
      top: $itemPadding + 3px
      width: $iconWidth

    &-item-isExpanded
      .accordionVertical
        &-content
          display: block

        &-btn
          color: $colorBrand

    &-item-isHidden
      .accordionVertical
        &-content
          display: none
